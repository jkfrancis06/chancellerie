
<div class="col col-12">

    {{ form_start(indiceForm) }}

    <div class="text-danger">
        {{ form_errors(indiceForm) }}
    </div>

    <div class="mb-3">
        {{ form_label(indiceForm.grade, "Grade : ", {'label_attr': {'class': 'intitule_label'}}) }}
