            <div class="col col-2">
                {{ form_widget(indiceForm.periodeAnciennete, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error" style="color: red">
                    {{ form_errors(indiceForm.periodeAnciennete) }}
