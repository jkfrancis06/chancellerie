{% extends 'nav.html.twig' %}

{% block title %}Unite et corps{% endblock %}


{% block content %}

    <div style="margin-top: 1em">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#unites" type="button" role="tab" aria-controls="unites" aria-selected="true">Unites</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#corps" type="button" role="tab" aria-controls="corps" aria-selected="false">Corps</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#specialites" type="button" role="tab" aria-controls="specialites" aria-selected="false">Specialites</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="unites" role="tabpanel" aria-labelledby="unites-tab">
                <div class="row" style="margin-top: 2em">
                    <div class="col col-6">

                        {% for message in app.session.flashbag.get('unite_add') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>{{ message }}!</strong>
                                <button type="button" class="btn-close"  data-bs-dismiss="alert"  aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(uniteForm) }}

                        <div class="text-danger">
                            {{ form_errors(uniteForm) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(uniteForm.intitule, "Nom  de l'unite : ", {'label_attr': {'class': 'intitule_label'}}) }}
                            {{ form_widget(uniteForm.intitule, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error" style="color: red">
                                {{ form_errors(uniteForm.intitule) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(uniteForm.description, "Description de l'unite : ", {'label_attr': {'class': 'intitule_label'}}) }}
                            {{ form_widget(uniteForm.description, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error" style="color: red">
                                {{ form_errors(uniteForm.description) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(uniteForm.corps, "Corps : ", {'label_attr': {'class': 'intitule_label'}}) }}
                            {{ form_widget(uniteForm.corps, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error" style="color: red">
                                {{ form_errors(uniteForm.corps) }}
                            </div>
                        </div>

                        <hr>
                        <div class="col col-12">
                            <div class="row">
                                <div class="col col-2">
                                    {{ form_row(uniteForm.cancel,{'attr':{'class': 'btn btn-outline-secondary form-btn'}}) }}
                                </div>
                                <div class="col col-2">
                                    {{ form_row(uniteForm.submit,{'attr':{'class': 'btn btn-outline-success form-btn'}}) }}
                                </div>
                            </div>
                        </div>

                        {{ form_end(uniteForm) }}
                    </div>

                    <div class="col col-6">
                        <div class="card" >
                            <div class="card-body">
                                <h5 class="card-title">Liste des  unites</h5>
                                <hr>
                                <table class="table table-responsive table-bordered table-striped table-hover text-center">
                                    <thead>
                                    <tr>
                                        <th>Intitule</th>
                                        <th>Description</th>
                                        <th>Corps</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% if db_unites | length == 0 %}
                                        <p class="text-center">Aucune unite n'a été ajoutée pour l'instant</p>
                                    {% else %}
                                        {% for unite in db_unites %}
                                            <tr>
                                                <td>{{ unite.intitule }}</td>
                                                <td>{{ unite.description }}</td>
                                                <td>{{ unite.corps.intitule }}</td>
                                            </tr>
                                        {% endfor %}

                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="corps" role="tabpanel" aria-labelledby="corps-tab">


                <div class="row" style="margin-top: 2em">
                    <div class="col col-6">

                        {% for message in app.session.flashbag.get('corps_add') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>{{ message }}!</strong>
                                <button type="button" class="btn-close"  data-bs-dismiss="alert"  aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(corpsForm) }}

                        {{ form_errors(corpsForm) }}

                        <div class="mb-3">
                            {{ form_label(corpsForm.intitule, "Nom  du corps : ", {'label_attr': {'class': 'intitule_label'}}) }}
                            {{ form_widget(corpsForm.intitule, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error" style="color: red">
                                {{ form_errors(corpsForm.intitule) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(corpsForm.description, "Description du corps : ", {'label_attr': {'class': 'intitule_label'}}) }}
                            {{ form_widget(corpsForm.description, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error" style="color: red">
                                {{ form_errors(corpsForm.description) }}
                            </div>
                        </div>

                        <div class="col col-12">
                            {{ form_label(corpsForm.fichiers, "Logos", {'label_attr': {'class': 'c_image_name_input_label'}}) }}
                            <div class="input-group">
                                {{ form_widget(corpsForm.fichiers, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-error" style="color: red">
                                {{ form_errors(corpsForm.fichiers) }}
                            </div>
                        </div>

                        <hr>
                        <div class="col col-12">
                            <div class="row">
                                <div class="col col-2">
                                    {{ form_row(corpsForm.cancel,{'attr':{'class': 'btn btn-outline-secondary form-btn'}}) }}
                                </div>
                                <div class="col col-2">
                                    {{ form_row(corpsForm.submit,{'attr':{'class': 'btn btn-outline-success form-btn'}}) }}
                                </div>
                            </div>
                        </div>

                        {{ form_end(corpsForm) }}
                    </div>

                    <div class="col col-6">

                        <div class="card" >
                            <div class="card-body">
                                <h5 class="card-title">Liste des  corps</h5>
                                <hr>
                                <table class="table table-responsive table-bordered table-striped table-hover text-center">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th>Intitule</th>
                                        <th>Description</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% if db_corps | length == 0 %}
                                        <p class="text-center">Aucun corps n'a été ajoutée pour l'instant</p>
                                    {% else %}
                                        {% for corps in db_corps %}
                                            <tr>
                                                <td class="d-flex justify-content-center">
                                                    <img height="50" width="50" src="{{ asset('/logos/') }}{{ corps.fichiers[0].nom }}" class="img-thumbnail" alt="...">
                                                </td>
                                                <td>{{ corps.intitule }}</td>
                                                <td>{{ corps.description }}</td>
                                            </tr>
                                        {% endfor %}

                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>


            </div>
            <div class="tab-pane fade" id="specialites" role="tabpanel" aria-labelledby="specialites-tab">

            </div>
        </div>

    </div>




{% endblock %}
