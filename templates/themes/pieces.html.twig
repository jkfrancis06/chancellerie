
{% block PieceType_label %}
{% endblock %}

{% block PieceType_widget %}
    <div class="row mt-3 ml-2">
        <div class="col-md-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    {{ form_widget(form.file, {'attr': {'class': 'custom-file-input'}}) }}
                    <label class="custom-file-label" for="inputGroupFile01">Choisier un fichier</label>
                </div>
            </div>
            <div class="form-error" style="color: red">
                {{ form_errors(form.file) }}
            </div>
        </div>
        <div class="col-md-3">
            {{ form_widget(form.datePiece, {'attr': {'class': 'js-datepicker'}}) }}
            <div class="form-error" style="color: red">
                {{ form_errors(form.datePiece) }}
            </div>
        </div>
        <div class="col-md-3">
            {{ form_widget(form.description, {'attr': {'class': 'md-textarea form-control'}}) }}
            <div class="form-error" style="color: red">
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="col-md-2">
            <a href="#" class="collection-add btn btn-sm btn-default" title="Add Piece"><span class="fa fa-plus-circle"></span></a>
            <a href="#" class="collection-remove btn btn-sm btn-danger" title="Delete Piece"><span class="fa fa-trash"></span></a>
        </div>
    </div>
{% endblock %}




